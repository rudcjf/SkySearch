	<authentication-manager>
		<authentication-provider>
		  <user-service>
				
		
			<user name="system@skysearch.com" password="system123" authorities="ROLE_SYSTEM"/>				
			</user-service> 
 		<jdbc-user-service data-source-ref="dataSource"
		users-by-username-query="SELECT EMAIL as username, PASSWORD as password,
		 1 as enabled FROM skysearch.SS_MEMBER WHERE MEMBER_SEQ = ?"
		authorities-by-username-query="SELECT MA.M_SEQ as username, A.A_NAME as authority 
		FROM MEMBER_AUTH MA, AUTH A	WHERE MA.A_SEQ=A.A_SEQ and M_SEQ = ?"/>	 
		
